<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">

    </style>


    <!--
    colorPrimary: 顶部toolbar的背景色
    colorPrimaryDark: 顶部通知栏的颜色
    textColorPrimary: toolbar的文字颜色
    windowBackground: 窗体背景色
    navigationBarColor: 底部导航控件背景色
    colorAccent: 强调色
    -->

    <style name="MaterialThemeBasic" parent="MaterialBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/material_blue_700</item>
        <item name="android:colorControlHighlight">#c6fbfa</item>

    </style>

    <style name="MaterialTheme" parent="MaterialThemeBasic">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/changbounds</item>
        <item name="android:windowSharedElementExitTransition">@transition/changbounds</item>
    </style>

    <style name="SnackStyle" parent="Widget.Design.Snackbar">
        <item name="android:elevation">20dp</item>
    </style>

</resources>
